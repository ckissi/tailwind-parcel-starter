{
  "name": "tailwind-parcel-starter",
  "version": "1.0.0",
  "description": "Front-end starter kit using the Parcel bundler",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "http-server": "^0.11.1",
    "parcel-bundler": "^1.12.3",
    "rucksack-css": "^1.0.2",
    "sass": "^1.22.9",
    "tailwindcss": "^1.1.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development npm run clean && parcel -p 8000 src/index.html",
    "build": "NODE_ENV=production npm run clean && parcel build src/index.html --no-source-maps",
    "serve": "http-server -p 8000 dist",
    "clean": "rm -rf .cache dist && npm run static",
    "static": "mkdir -p dist && cp src/static/* dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pboi20/tailwind-parcel-starter.git"
  },
