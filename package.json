{
  "name": "tailwind-parcel-starter",
  "version": "1.0.0",
  "description": "Front-end starter kit using the Parcel bundler",
  "homepage": "https://github.com/pboi20/tailwind-parcel-starter#readme",
  "author": "Patrick Boivin",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "http-server": "^0.12.1",
    "parcel-bundler": "^1.12.4",
    "rucksack-css": "^1.0.2",
    "sass": "^1.25.0",
    "tailwindcss": "^1.1.4"
  },
  "scripts": {
    "dev": "npm run clean && parcel -p 8000 src/index.html",
    "build": "npm run clean && npm run static && parcel build src/index.html --no-source-maps",
    "serve": "http-server -p 8000 dist",
    "clean": "rm -rf .cache dist",
    "static": "mkdir -p dist && cp src/static/* dist/"
  }
}
